{
  "manifest_version": 3,
  "name": "TS PDF & Web Annotator",
  "version": "1.0",
  "description": "Draw, highlight, and add notes on any page or PDF.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}