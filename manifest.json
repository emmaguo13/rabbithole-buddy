{
  "manifest_version": 3,
  "name": "TS PDF & Web Annotator",
  "version": "1.0",
  "description": "Draw, highlight, and add notes on any page or PDF.",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "bookmark.js",
    "type": "module"
  },
  "action": {
    "default_title": "Save this page",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
